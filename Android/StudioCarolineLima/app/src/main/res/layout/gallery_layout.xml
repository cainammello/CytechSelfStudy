<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagem"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/photo05" />

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/posted_text"
                    android:layout_below="@id/imagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postado as 00:00"
                    android:textSize="12sp"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/posted_text"
                    android:id="@+id/info_text"
                    android:text="@string/gallery_text"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="15dp"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagem2"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/photo01"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/posted_text2"
                        android:layout_below="@id/imagem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postado as 00:00"
                        android:textSize="12sp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/posted_text2"
                        android:id="@+id/info_tex2"
                        android:text="@string/gallery_text"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagem3"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/photo02"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/posted_text3"
                        android:layout_below="@id/imagem3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postado as 00:00"
                        android:textSize="12sp"/>

                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/posted_text3"
                        android:id="@+id/info_text3"
                        android:text="@string/gallery_text"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
